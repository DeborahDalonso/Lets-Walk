<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6200EE"
    tools:context=".ListaMaps">

    <Button
        android:id="@+id/btnOpc"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnOpc1"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/btnOpc"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/btnOpc2"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/btnOpc1"
        android:layout_marginTop="88dp"
        android:text=""
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <Button
        android:id="@+id/btnOpc3"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/btnOpc2"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/btnOpc4"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/btnOpc3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:text=""
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>