        android:text="FarmÃ¡cia"
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPolicia"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnHospital"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:text="Hospital"
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFarmarcia"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCinema"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:text="Cinema"
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHospital"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnRestaurante"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:text="Restaurante"
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCinema"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMercado"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/btnFarmarcia"
        android:text="Mercado"
        android:textSize="24sp"
        app:backgroundTint="#FF6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRestaurante" />

</androidx.constraintlayout.widget.ConstraintLayout>